{% extends "admbase.html.twig" %}

{% block head %}
<style type="text/css">
	.img-circle {
		height: 100px;
		width: 100px;
		margin: 0 auto;
	}
</style>
{% endblock %}

{% block adminAsistencia %}
active
{% endblock %}

{% block content %}
<div class="col-lg-9">
	<div class="panel panel-default">
		<table class="table table-striped">
			<thead>
				<th>Piloto/Circuito</th>
				{% for circuito in circuitos %}
					<th>{{ circuito['nombre'] }}</th>
				{% endfor %}
			</thead>
			<tbody>
				{% for piloto in pilotos %}
				<tr>
					<td>{{ piloto['nombre_completo'] }}</td>
					{% for circuito in circuitos %}
						<td>
							<select>
								<option value="0">Selección</option>
								<option value="1">Asiste</option>
								<option value="2">Justifica falta</option>
								<option value="3">Falta sin justificar</option>
								<option value="4">Sanción</option>
							</select>
						</td>
					{% endfor %}				
				</tr>
				{% else %}
				<tr><td>Todavía no se pueden pasar faltas</td></tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<a href="#" class="btn btn-success">Guardar faltas</a>
</div>
{% endblock %}