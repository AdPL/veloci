{% extends "base.html.twig" %}

{% block Settings %}
{% if rol >= 1 %}
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cogs"></i><b class="caret"></b></a>
		<ul class="dropdown-menu">
			<li><a href="#">Perfil</a></li>
			<li><a href="#">Otra opción</a></li>
			{% if rol == 5 %}
				<li><a href="{{ urlFor('admin') }}">Panel de administración</a></li>
			{% endif %}
			<li><a href="#">Salir</a></li>
		</ul>
	</li>
{% endif %}
{% endblock %}

{% block container %}
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-5 col-lg-3 col-lg-offset-2">
			<div class="panel panel-default">
				<div class="panel-body">
					{% if alert %}
						<img src="{{ user['avatar'] }}" alt="avatar" class="img-circle img-responsive">
						<h2 class="text-center">{{ user['nombre_completo'] }}</h2>
					{% else %}
						<img src="{{ user['avatar'] }}" alt="avatar" class="img-circle img-responsive">
						<h2 class="text-center">{{ user['nombre_completo'] }}</h2>
						<ul>
							<li>Carreras disputadas: {{ competidas }} </li>
							<li>Ausencias justificadas: {{ justificadas }} </li>
							<li>Ausencias injustificadas: {{ injustificadas }} </li>
							<li>Sanciones: {{ sancionado }} </li>
						</ul>
					{% endif %}
				</div>
			</div>
		</div>

		<div class="col-sm-7 col-lg-5">
			<div class="panel panel-default">
				<div class="panel-body">
					{% if alert %}
						<div class="alert alert-danger">
							{{ alert }}
						</div>
						<a class="btn btn-warning" href="{{ urlFor('pilotos') }}">Volver</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}