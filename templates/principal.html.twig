{% extends "base.html.twig" %}

{% block head %}
{% endblock %}

{% block DropDownMenu %}{% endblock %}

{% block categorias %}
{% for categoria in categorias %}
<div class="media">
	<a class="pull-left" href="#">
		<img class="media-object img40" src="{{ categoria['imagen'] }}" alt="{{ categoria['nombre'] }}">
	</a>
	<div class="media-body">
		<h4 class="media-heading">{{ categoria['nombre'] }}</h4>
		<small>{% if plazas == "" %}0{% else %}{{ plazas }}{% endif %}/{{ categoria['plazas'] }} ocupadas</small>
	</div>
</div>
{% endfor %}
{% endblock %}