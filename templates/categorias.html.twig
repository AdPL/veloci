{% extends "base.html.twig" %}

{% block content %}
<div class="col-sm-9">
	<div class="panel panel-default">
	<div class="panel-heading">
		Categorías
	</div>
	<div class="panel-body">
	<div class="row">
      <div class="col-xs-12">
        
      </div>
    </div>
    <hr>
	</div>
	<table class="table table-striped">
		<thead>
			<th>Avatar</th>
			<th>Nombre</th>
			<th>Plazas disponibles</th>
			<th>Plazas totales</th>
			<th>Precio</th>
		</thead>
		<tbody>
		{% for categoria in categorias %}
		<tr>
			<td><img src="{{ categoria['imagen'] }}" alt="Imagen {{ categoria['nombre'] }}"/></td>
			<td>{{ categoria['nombre'] }}</td>
			<td>2</td>
			<td>{{ categoria['plazas'] }}</td>
			<td>{{ categoria['precio_inscripcion'] }}</td>
		</tr>
		{% else %}
		<tr><td>No se han encontrado usuarios</td></tr>
		{% endfor %}
		</tbody>
	</table>
	</div>
</div>
{% endblock %}