{% extends "base.html.twig" %}

{% block container %}
<div class="container-fluid">
	<div class="col-sm-6 col-md-6 col-lg-12">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="col-sm-6 col-md-6 col-lg-6">
					<h1>Iniciar sesión</h1>
