{% extends "base.html.twig" %}

{% block content %}
<div class="col-sm-9">
	<div class="panel panel-default">
	<div class="panel-body">
	<div class="row">
      <div class="col-xs-12">
        <h1>Reclamaciones <small>Carreras con plazo de reclamación abierto</small></h1>
      </div>
    </div>
	</div>
	<table class="table table-striped">
		<thead>
			<th>Carrera</th>
			<th>Fecha</th>
			<th>Reclamar</th>
		</thead>
		<tbody>
		{% for carrera in carreras %}
		<tr>
			<td>{{ carrera['nombre'] }}</td>
			<td>{{ carrera['fecha']|date('d/m/Y') }}</td>
			<td><button type="button" class="btn btn-success">Nueva Reclamación</button></td>
		</tr>
		{% else %}
		<tr><td>Ninguna carrera tiene el plazo de reclamación abierto</td></tr>
		{% endfor %}
		</tbody>
	</table>
	</div>
</div>
{% endblock %}