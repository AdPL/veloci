{% extends "admbase.html.twig" %}

{% block head %}
<style type="text/css">
	.img-circle {
		height: 100px;
		width: 100px;
		margin: 0 auto;
	}
</style>
{% endblock %}

{% block Settings %}
{% if rol >= 1 %}
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cogs"></i><b class="caret"></b></a>
		<ul class="dropdown-menu">
			<li><a href="#">Perfil</a></li>
			<li><a href="#">Otra opción</a></li>
			{% if rol == 5 %}
				<li><a href="{{ urlFor('admin') }}">Panel de administración</a></li>
			{% endif %}
			<li><a href="#">Salir</a></li>
		</ul>
	</li>
{% endif %}
{% endblock %}

{% block content %}
<div class="col-lg-12">
	<div class="panel panel-default">
		<table class="table table-striped">
			<thead>
				<th>Nombre</th>
				<th>País</th>
				<th>Distancia</th>
				<th>Editar</th>
				<th>Borrar</th>
			</thead>
			<tbody>
				{% for circuitos in circuitos %}
				<tr>
					<td>{{ circuitos['nombre'] }}</td>
					<td>{{ circuitos['pais'] }}</td>
					<td>{{ circuitos['distancia'] }} Km</td>
					<td><a href="{{ urlFor('editarCategoria', {'idCat': categoria.id}) }}" class="btn btn-info">Editar</a></td>
					<td><form method="post" action="{{ urlFor('editarCategoriaPost') }}"><input type="text" name="id" value="{{ categoria['id'] }}" hidden><button type="submit" class="btn btn-danger">Eliminar</button></form></td>
				</tr>
				{% else %}
				<tr><td>No se han encontrado circuitos</td></tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}