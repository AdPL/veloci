{% extends "base.html.twig" %}

{% block content %}
<div class="col-sm-9">
	<div class="panel panel-default">
	<div class="panel-body">
	<div class="row">
      <div class="col-xs-12">
        <h1>Lista de reclamaciones <small>Reclamaciones abiertas</small></h1>
      </div>
    </div>
    {% if alert %}
    	<div class="alert alert-danger">{{ alert }}</div>
    {% endif %}
	</div>
	<table class="table table-striped">
		<thead>
			<th>Vuelta</th>
			<th>Minuto</th>
			<th>Reclama</th>
			<th>Motivo</th>
			<th>Ver</th>
		</thead>
		<tbody>
		{% for reclamacion in reclamaciones %}
		<tr>
			<td>{{ reclamacion['vuelta'] }}</td>
			<td>{{ reclamacion['minuto'] }}</td>
			<td>{{ reclamacion['nombre_completo'] }}</td>
			<td>{{ reclamacion['titulo'] }}</td>
			<td><a href="{{ urlFor('reclamacion', {'idReclamacion': reclamacion['incidente_id']}) }}" class="btn btn-success">Ver Reclamación</a></td>
		</tr>
		{% else %}
		<tr><td>No hay reclamaciones abiertas para esta carrera.</td></tr>
		{% endfor %}
		</tbody>
	</table>
	</div>
</div>
{% endblock %}