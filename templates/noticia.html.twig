{% extends "base.html.twig" %}

{% block head %}
<style type="text/css">
	.img-circle {
		height: 100px;
		width: 100px;
		margin: 0 auto;
	}
</style>
{% endblock %}

{% block container %}
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-3 col-lg-3 col-lg-offset-2">
			<div class="panel panel-default">
				<div class="panel-body">
					<ul>
						{% for noticia in noticias %}
							<li><a href="/noticia/{{ noticia['id'] }}">{{ noticia['titulo'] }}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>

		<div class="col-sm-3 col-lg-5">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="col-xs-12">
				        <h2>{{ noticia['titulo'] }} <!--<span class="label label-success">Nueva</span>--></h2>

				        <ul class="list-inline">
				        	<li><a href="#"><i class="fa fa-calendar"></i> Hace 1 día</a></li>
				        	<li><a href="#"><i class="fa fa-comment"></i> 0 Comentarios</a></li>
				        	<li><a href="#"><i class="fa fa-share"></i> Compartido 1 vez</a></li>
				        </ul>
				        	<p>Publicado por: {{ noticia['nombre_completo'] }}</p>
				        	<p>{{ noticia['texto'] }}</p>
				      </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}