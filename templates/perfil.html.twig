{% extends "base.html.twig" %}

{% block head %}
<style type="text/css">
	.img-circle {
		height: 100px;
		width: 100px;
		margin: 0 auto;
	}
</style>
{% endblock %}

{% block Settings %}
{% if rol >= 1 %}
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cogs"></i><b class="caret"></b></a>
		<ul class="dropdown-menu">
			<li><a href="#">Perfil</a></li>
			<li><a href="#">Otra opción</a></li>
			{% if rol == 5 %}
				<li><a href="{{ urlFor('admin') }}">Panel de administración</a></li>
			{% endif %}
			<li><a href="#">Salir</a></li>
		</ul>
	</li>
{% endif %}
{% endblock %}

{% block container %}
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-3 col-lg-3 col-lg-offset-2">
			<div class="panel panel-default">
				<div class="panel-body">
					<img src="{{ avatar }}" alt="avatar" class="img-circle img-responsive">
					<h2 class="text-center">{{ usuario }}</h2>
				</div>
			</div>
		</div>

		<div class="col-sm-3 col-lg-5">
			<div class="panel panel-default">
				<div class="panel-body">
					<form method="post" action="#" role="form" class="form-horizontal" enctype="multipart/form-data">
						<div class="form-group">
							<label for="inputFoto" class="col-sm-2 control-label">Cambiar avatar</label>
							<div class="col-sm-3">
								<input type="file" name="inputFoto" id="inputFoto">
							</div>
						</div>
						<button type="submit" class="btn btn-success">Guardar cambios</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}