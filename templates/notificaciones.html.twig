{% extends "admbase.html.twig" %}

{% block notificaciones %}
class="active"
{% endblock %}

{% block content %}
<div class="col-lg-9">
	<div class="panel panel-default">
		<div class="panel-body">
			<h2>Notificaciones</h2>
			<hr>
			<ul class="list-group">
				{% for notificacion in notificaciones %}
					{% if notificacion['tipo'] == 0 %}
						<a href="{{ notificacion['enlace'] }}" onclick="veNotificacionAdmin('{{ notificacion['id'] }}')">{{ notificacion['usuario'] }} {{ notificacion['nota'] }}</a><hr>
					{% endif %}
				{% endfor %}
			</ul>
		</div>
	</div>
</div>
{% endblock %}