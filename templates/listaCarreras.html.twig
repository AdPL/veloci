{% extends "admbase.html.twig" %}

{% block head %}
<style type="text/css">
	.img-circle {
		height: 100px;
		width: 100px;
		margin: 0 auto;
	}
</style>
{% endblock %}

{% block adminCarreras %}
active
{% endblock %}

{% block content %}
<div class="col-lg-9">
	<div class="panel panel-default">
		<table class="table table-striped">
			<thead>
				<th>Nombre</th>
				<th>Primer compuesto</th>
				<th>Segundo compuesto</th>
				<th>Vueltas</th>
				<th>Fecha y hora</th>
				<th>Categoría</th>
				<th>Circuito</th>
			</thead>
			<tbody>
				{% for carrera in carreras %}
				<tr>
					<td>{{ carrera['nombre'] }}</td>
					<td>{{ carrera['neumatico1'] }}</td>
					<td>{{ carrera['neumatico2'] }}</td>
					<td>{{ carrera['vueltas'] }}</td>
					<td>{{ carrera['fecha'] }} | {{ carrera['hora'] }}</td>
					<td>{{ carrera['categoria_id'] }}</td>
					<td>{{ carrera['circuito_id'] }}</td>
					<td><a href="{{ urlFor('editarCategoria', {'idCat': categoria.id}) }}" class="btn btn-info">Editar</a></td>
					<td><form method="post" action="{{ urlFor('editarCarreraPost') }}"><input type="text" name="id" value="{{ carrera['id'] }}" hidden><button type="submit" class="btn btn-danger">Eliminar</button></form></td>
				</tr>
				{% else %}
				<tr><td>No se han encontrado categorías</td></tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}